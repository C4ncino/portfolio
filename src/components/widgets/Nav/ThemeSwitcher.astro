---
import { Icon } from "astro-icon/components";
---

<button data-id="theme-switcher" class="group relative">
  <Icon name="ant-design:sun-outlined" class="h-7 w-7" />
  <Icon name="ant-design:moon-outlined" class="h-7 w-7 hidden" />

  <span
    class="absolute inset-x-1 sm:group-hover:opacity-100 opacity-0 -bottom-px h-px bg-linear-to-r from-teal-500/0 via-teal-500/40 to-teal-500/0 dark:from-teal-400/0 dark:via-teal-400/40 dark:to-teal-400/0"
  ></span>
</button>

<script>
  import { ThemeSwitcher } from "@/lib/theme-switcher";

  document.addEventListener("astro:page-load", () => {
    new ThemeSwitcher();
  });
</script>
