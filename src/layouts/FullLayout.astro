---
import BaseLayout from "./BaseLayout.astro";

import Header from "@ui/blocks/Header.astro";
import Footer from "@ui/blocks/Footer.astro";
---

<BaseLayout>
  <slot name="head" slot="head" />

  <Fragment slot="content">
    <Header />

    <div class="flex flex-col min-h-screen-header h-full justify-between">
      <div class="max-w-4xl mx-auto">
        <slot />
      </div>

      <Footer />
    </div>
  </Fragment>
</BaseLayout>
