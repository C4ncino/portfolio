---
import { ClientRouter } from "astro:transitions";

import { getLangFromUrl } from "@/i18n/utils";

import "../styles/global.css";

const lang = getLangFromUrl(Astro.url);
---

<!doctype html>
<html lang={lang}>
  <head>
    <slot name="head" />
    <ClientRouter />
  </head>
  <body>
    <div class="bg-white dark:bg-black text-black dark:text-white">
      <slot name="content" />
    </div>
  </body>
</html>
